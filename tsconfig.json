{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "tsc_output",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"typeRoots": ["src/types"]
	},
	"exclude": ["node_modules", "nyc_output", "coverage"],
	"include": ["src/**/*.ts"]
}
